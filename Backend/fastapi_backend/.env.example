# Backend environment example for SurgeGuard FastAPI

# General
ENVIRONMENT=production

# Twilio (used by app/services/twilio_client.py)
# When TWILIO_DRY_RUN=true, no real SMS/WhatsApp is sent and all messages are treated as queued.
TWILIO_ACCOUNT_SID=your_twilio_account_sid_here
TWILIO_AUTH_TOKEN=your_twilio_auth_token_here
TWILIO_FROM_NUMBER=+1234567890
TWILIO_DRY_RUN=true

# OpenAI (used by app/services/openai_client.py)
# When OPENAI_DRY_RUN=true or OPENAI_API_KEY is empty, advisory drafts are mock-only.
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4o-mini
OPENAI_DRY_RUN=true
