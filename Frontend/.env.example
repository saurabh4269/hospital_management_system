# Frontend environment example for SurgeGuard Vite app

# When true, the app uses MockDataService (no backend required).
# When false, it uses LiveDataService and calls the FastAPI backend.
VITE_DEMO_MODE=true

# Base URL for backend API when VITE_DEMO_MODE is false.
# In local dev without Docker, this is usually http://localhost:8000
# In docker-compose, this will typically be http://backend:8000
VITE_API_BASE_URL=http://localhost:8000

# If true, MockDataService logs demo activity to the console.
VITE_VERBOSE=false
